<?xml version="1.0" encoding="utf-8"?>
<com.pichs.common.widget.cardview.XCardLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    app:xp_radius="10dp">

    <com.pichs.common.widget.view.XTextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <com.pichs.common.widget.view.XTextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingEnd="15dp"
        android:paddingBottom="8dp"
        android:textColor="#666666"
        android:textSize="16sp"
        android:visibility="gone" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.pichs.common.widget.view.XView
        android:id="@+id/dialog_divider_line_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e1e1" />

    <com.pichs.common.widget.view.XLinearLayout
        android:id="@+id/ll_btn_parent"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <com.pichs.common.widget.view.XTextView
            android:id="@+id/tv_negative_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xp_pressedBackground="#80e9e9e9"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#555555"
            android:textSize="16sp" />

        <com.pichs.common.widget.view.XView
            android:id="@+id/dialog_divider_line_vertical"
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#eaeaea" />

        <com.pichs.common.widget.view.XTextView
            android:id="@+id/tv_positive_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:xp_pressedBackground="#80e9e9e9"
            android:background="#00000000"
            android:gravity="center"
            android:text="OK"
            android:textColor="#277CE6"
            android:textSize="16sp" />
    </com.pichs.common.widget.view.XLinearLayout>
</com.pichs.common.widget.cardview.XCardLinearLayout>

