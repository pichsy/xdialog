<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.pichs.common.widget.cardview.XCardButton
        android:id="@+id/btn1"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:minHeight="10dp"
        android:text="弹弹弹"
        android:textColor="#fff"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xp_backgroundGradientEndColor="#f8e"
        app:xp_backgroundGradientStartColor="#d94"
        app:xp_isRadiusAdjustBounds="true" />

    <com.pichs.common.widget.cardview.XCardButton
        android:id="@+id/btn2"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:minHeight="10dp"
        android:text="菜单"
        android:textColor="#fff"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xp_backgroundGradientEndColor="#39D720"
        app:xp_backgroundGradientStartColor="#07C5DE"
        app:xp_isRadiusAdjustBounds="true" />


</LinearLayout>